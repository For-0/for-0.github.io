extends includes/layout.pug
block variables
    - var title = "Home";
append main-stylesheet
    link(rel="stylesheet" href="css/home.scss")
block content
    .hero.is-large.title-hero
        .hero-body
            .container
                img(src='images/forzeronavbar.svg' style="height:200px; margin-left: 1rem; margin-right: 1rem; position: relative; bottom: 8px;")
                h2.has-font-weight-normal.has-text-white.subtitle.is-3 Completely free applications that transform learning, by students, for students.
                button#down-to-second-page.button.is-ghost #[i.material-symbols-rounded(aria-hidden="true") keyboard_double_arrow_down]
    br#second-page
    .second-page-text-left
        h1.title 💯% Free.
        h2.subtitle That means no ads. We do this for #[strong zero] profit. It's in the name!
    .second-page-text-right
        h1.title We ❤️ Open Source.
        h2.subtitle Everything we can share, we'll share. Complete transparency.
    .second-page-text-left
        h1.title Fast Web Apps. 🔥
        h2.subtitle Our applications do justice.
    .second-page-text-right
        h1.title Built Around You. 🙌
        h2.subtitle We're here to help students and making learning better.
append scripts-footer
    script(src="js/home.js")